<div class="text-center h3">ลงทะเบียนเข้าฟัง<br/><%= @talk.name %></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'errors' %>
    <%= form_for([@talk, @reservation], html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :fname, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :fname, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :lname, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :lname, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :telephone, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= f.text_field :telephone, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary form-control' %>
      </div>
    <% end %>
  </div>
</div>